<Window x:Class="ExpandScreen.UI.Views.PerformanceTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="性能测试"
        Height="640"
        Width="980"
        MinHeight="560"
        MinWidth="920"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <LinearGradientBrush x:Key="HeaderBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#22151B2D" Offset="0"/>
            <GradientStop Color="#33151B2D" Offset="0.25"/>
            <GradientStop Color="#2500D9FF" Offset="1"/>
        </LinearGradientBrush>

        <DrawingBrush x:Key="GridPatternBrush"
                      TileMode="Tile"
                      Viewport="0,0,24,24"
                      ViewportUnits="Absolute"
                      Opacity="0.18">
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="Transparent">
                        <GeometryDrawing.Pen>
                            <Pen Brush="{DynamicResource BorderBrush}" Thickness="1"/>
                        </GeometryDrawing.Pen>
                        <GeometryDrawing.Geometry>
                            <GeometryGroup>
                                <LineGeometry StartPoint="0,0" EndPoint="24,0"/>
                                <LineGeometry StartPoint="0,0" EndPoint="0,24"/>
                            </GeometryGroup>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>

        <Style x:Key="MetricLabelStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{DynamicResource UIFont}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
        </Style>

        <Style x:Key="MetricValueStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{DynamicResource MonoFont}"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>

        <Style x:Key="PillButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="{DynamicResource UIFont}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="999"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="16" Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="24" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="64"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="46"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource HeaderBrush}"
                    CornerRadius="16,16,0,0"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Margin="18,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="性能测试"
                                   FontFamily="{DynamicResource UIFont}"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Text="采样 CPU / 内存 / 堆 / RTT，并导出 JSON 或 CSV。"
                                   FontFamily="{DynamicResource UIFont}"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Style="{DynamicResource IconButtonStyle}" Click="CloseButton_Click" ToolTip="关闭">
                            <TextBlock Text="✕" FontSize="14"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Background="{DynamicResource BackgroundBrush}">
                <Grid.Background>
                    <VisualBrush Visual="{StaticResource GridPatternBrush}" Stretch="None"/>
                </Grid.Background>

                <Grid Margin="18,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="360"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: live metrics -->
                    <StackPanel Grid.Column="0">
                        <Border Style="{DynamicResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="实时指标"
                                           FontFamily="{DynamicResource UIFont}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,12"/>

                                <UniformGrid Columns="3" Rows="2">
                                    <StackPanel Margin="0,0,12,12">
                                        <TextBlock Text="CPU" Style="{StaticResource MetricLabelStyle}"/>
                                        <TextBlock Text="{Binding CpuNowText}" Style="{StaticResource MetricValueStyle}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,12,12">
                                        <TextBlock Text="Working Set" Style="{StaticResource MetricLabelStyle}"/>
                                        <TextBlock Text="{Binding MemNowText}" Style="{StaticResource MetricValueStyle}"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,12">
                                        <TextBlock Text="Managed Heap" Style="{StaticResource MetricLabelStyle}"/>
                                        <TextBlock Text="{Binding HeapNowText}" Style="{StaticResource MetricValueStyle}"/>
                                    </StackPanel>

                                    <StackPanel Margin="0,0,12,0">
                                        <TextBlock Text="Heartbeat RTT" Style="{StaticResource MetricLabelStyle}"/>
                                        <TextBlock Text="{Binding RttNowText}"
                                                   FontFamily="{DynamicResource MonoFont}"
                                                   FontSize="13"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                    <StackPanel Margin="0,0,12,0">
                                        <TextBlock Text="FPS" Style="{StaticResource MetricLabelStyle}"/>
                                        <TextBlock Text="{Binding FpsNowText}"
                                                   FontFamily="{DynamicResource MonoFont}"
                                                   FontSize="13"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                    <StackPanel>
                                        <TextBlock Text="Latency" Style="{StaticResource MetricLabelStyle}"/>
                                        <TextBlock Text="{Binding LatencyNowText}"
                                                   FontFamily="{DynamicResource MonoFont}"
                                                   FontSize="13"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                </UniformGrid>
                            </StackPanel>
                        </Border>

                        <Border Style="{DynamicResource CardStyle}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="趋势（最近）"
                                           FontFamily="{DynamicResource UIFont}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource TextPrimaryBrush}"
                                           Margin="0,0,0,10"/>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="CPU (%)"
                                                   FontFamily="{DynamicResource UIFont}"
                                                   FontSize="12"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <Canvas Height="80" Margin="0,10,0,0">
                                            <Polyline Points="{Binding CpuSparkline}"
                                                      Stroke="{DynamicResource PrimaryBrush}"
                                                      StrokeThickness="2"
                                                      StrokeLineJoin="Round"
                                                      StrokeStartLineCap="Round"
                                                      StrokeEndLineCap="Round"/>
                                        </Canvas>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Working Set (MB)"
                                                   FontFamily="{DynamicResource UIFont}"
                                                   FontSize="12"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        <Canvas Height="80" Margin="0,10,0,0">
                                            <Polyline Points="{Binding MemSparkline}"
                                                      Stroke="{DynamicResource SuccessBrush}"
                                                      StrokeThickness="2"
                                                      StrokeLineJoin="Round"
                                                      StrokeStartLineCap="Round"
                                                      StrokeEndLineCap="Round"/>
                                        </Canvas>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Right: recording controls -->
                    <Border Grid.Column="2" Style="{DynamicResource CardStyle}">
                        <StackPanel>
                            <TextBlock Text="录制与导出"
                                       FontFamily="{DynamicResource UIFont}"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       Margin="0,0,0,10"/>

                            <TextBlock Text="{Binding StatusText}"
                                       FontFamily="{DynamicResource MonoFont}"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       Margin="0,0,0,12"/>

                            <StackPanel Orientation="Horizontal">
                                <Button Style="{StaticResource PillButtonStyle}"
                                        Content="开始录制"
                                        Command="{Binding StartRecordingCommand}"
                                        Margin="0,0,10,0"/>
                                <Button Style="{StaticResource PillButtonStyle}"
                                        Content="停止"
                                        Command="{Binding StopRecordingCommand}"/>
                            </StackPanel>

                            <Border Background="{DynamicResource BackgroundBrush}" CornerRadius="12" Padding="12" Margin="0,14,0,0">
                                <StackPanel>
                                    <TextBlock Text="上次记录摘要"
                                               FontFamily="{DynamicResource UIFont}"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <TextBlock Text="{Binding RunSummaryText}"
                                               FontFamily="{DynamicResource MonoFont}"
                                               FontSize="12"
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               TextWrapping="Wrap"
                                               Margin="0,8,0,0"/>
                                </StackPanel>
                            </Border>

                            <StackPanel Orientation="Horizontal" Margin="0,14,0,0">
                                <Button Style="{StaticResource PillButtonStyle}"
                                        Content="导出 JSON"
                                        Command="{Binding ExportJsonCommand}"
                                        Margin="0,0,10,0"/>
                                <Button Style="{StaticResource PillButtonStyle}"
                                        Content="导出 CSV"
                                        Command="{Binding ExportCsvCommand}"/>
                            </StackPanel>

                            <Button Style="{StaticResource PillButtonStyle}"
                                    Content="清除"
                                    Command="{Binding ClearCommand}"
                                    Margin="0,12,0,0"
                                    HorizontalAlignment="Left"/>

                            <TextBlock Text="提示：导出目录默认指向本机 diagnostics。"
                                       FontFamily="{DynamicResource UIFont}"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextDisabledBrush}"
                                       Margin="0,14,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="2"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,16,16">
                <Grid Margin="18,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="用于 TEST-002 性能测试数据采集"
                               FontFamily="{DynamicResource UIFont}"
                               FontSize="12"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1"
                               Text="采样间隔：500ms"
                               FontFamily="{DynamicResource MonoFont}"
                               FontSize="11"
                               Foreground="{DynamicResource TextDisabledBrush}"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>

