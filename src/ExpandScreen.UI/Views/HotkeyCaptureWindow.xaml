<Window x:Class="ExpandScreen.UI.Views.HotkeyCaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="录制快捷键"
        Width="520"
        Height="220"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Border Background="{DynamicResource BackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="14"
            Padding="18"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="22" ShadowDepth="0" Opacity="0.45"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" LastChildFill="True">
                <TextBlock Text="录制快捷键"
                           FontFamily="{DynamicResource UIFont}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextPrimaryBrush}"
                           VerticalAlignment="Center"/>
                <Button DockPanel.Dock="Right"
                        Style="{DynamicResource SecondaryButtonStyle}"
                        Content="×"
                        Width="34"
                        Height="30"
                        Click="Close_Click"/>
            </DockPanel>

            <Border Grid.Row="1"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="12"
                    Margin="0,14,0,14"
                    Padding="14">
                <StackPanel>
                    <TextBlock Text="按下组合键（建议包含 Ctrl / Alt / Shift）。"
                               FontFamily="{DynamicResource UIFont}"
                               FontSize="13"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>

                    <TextBlock Text="Esc 取消，Backspace 清除。"
                               FontFamily="{DynamicResource UIFont}"
                               FontSize="12"
                               Foreground="{DynamicResource TextDisabledBrush}"
                               Margin="0,6,0,0"/>

                    <Border Background="{DynamicResource BackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="14"
                            Margin="0,14,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="当前："
                                       FontFamily="{DynamicResource UIFont}"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding CapturedText}"
                                       FontFamily="{DynamicResource MonoFont}"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{DynamicResource SecondaryButtonStyle}"
                        Content="取消"
                        Margin="0,0,12,0"
                        Click="Cancel_Click"/>
                <Button Style="{DynamicResource PrimaryButtonStyle}"
                        Content="使用此快捷键"
                        Click="Ok_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

