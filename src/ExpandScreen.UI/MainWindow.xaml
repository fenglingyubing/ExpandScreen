<Window x:Class="ExpandScreen.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ExpandScreen.UI.ViewModels"
        xmlns:conv="clr-namespace:ExpandScreen.UI.Converters"
        xmlns:svc="clr-namespace:ExpandScreen.UI.Services"
        Title="ExpandScreen"
        Height="600"
        Width="900"
        MinHeight="500"
        MinWidth="700"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <conv:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:StatusToAnimationConverter x:Key="StatusToAnimationConverter"/>
        <conv:DeviceStatusToVisibilityConverter x:Key="DeviceStatusToVisibilityConverter"/>

        <!-- Device Card Style with Glow Effect -->
        <Style x:Key="DeviceCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                    <Setter Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="{DynamicResource PrimaryColor}"
                                            BlurRadius="18"
                                            ShadowDepth="0"
                                            Opacity="0.22"/>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="{DynamicResource PrimaryColor}"
                                            BlurRadius="16"
                                            ShadowDepth="0"
                                            Opacity="0.3"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Main Container with Drop Shadow -->
    <Border Background="{DynamicResource BackgroundBrush}"
            CornerRadius="12"
            Margin="8">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <!-- Title Bar -->
                <RowDefinition Height="48"/>
                <!-- Content -->
                <RowDefinition Height="*"/>
                <!-- Status Bar -->
                <RowDefinition Height="36"/>
            </Grid.RowDefinitions>

            <!-- ========== TITLE BAR ========== -->
            <Border Grid.Row="0"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- App Title -->
                    <StackPanel Grid.Column="0"
                               Orientation="Horizontal"
                               VerticalAlignment="Center"
                               Margin="16,0">
                        <!-- Logo/Icon Placeholder -->
                        <Border Width="24" Height="24"
                               Background="{DynamicResource PrimaryGradientBrush}"
                               CornerRadius="6"
                               Margin="0,0,12,0">
                            <TextBlock Text="E"
                                      FontFamily="{DynamicResource UIFont}"
                                      FontWeight="Bold"
                                      FontSize="16"
                                      Foreground="White"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="ExpandScreen"
                                  FontFamily="{DynamicResource UIFont}"
                                  FontSize="16"
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource TextPrimaryBrush}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Window Controls -->
                    <StackPanel Grid.Column="1"
                               Orientation="Horizontal"
                               Margin="0,0,8,0">
                        <!-- Theme Toggle -->
                        <Button Style="{DynamicResource IconButtonStyle}"
                               Command="{Binding ToggleThemeCommand}"
                               ToolTip="切换主题">
                            <TextBlock Text="◐" FontSize="18"/>
                        </Button>

                        <!-- Settings -->
                        <Button Style="{DynamicResource IconButtonStyle}"
                               Command="{Binding OpenSettingsCommand}"
                               ToolTip="设置">
                            <TextBlock Text="⚙" FontSize="18"/>
                        </Button>

                        <!-- Performance Test -->
                        <Button Style="{DynamicResource IconButtonStyle}"
                               Command="{Binding OpenPerformanceTestCommand}"
                               ToolTip="性能测试">
                            <TextBlock Text="⏱" FontSize="16"/>
                        </Button>

                        <!-- Analytics -->
                        <Button Style="{DynamicResource IconButtonStyle}"
                               Command="{Binding OpenAnalyticsCommand}"
                               ToolTip="统计与分析">
                            <TextBlock Text="∿" FontSize="18"/>
                        </Button>

                        <!-- Minimize -->
                        <Button Style="{DynamicResource IconButtonStyle}"
                               Click="MinimizeButton_Click"
                               ToolTip="最小化">
                            <TextBlock Text="―" FontSize="14"/>
                        </Button>

                        <!-- Maximize/Restore -->
                        <Button Style="{DynamicResource IconButtonStyle}"
                               Click="MaximizeButton_Click"
                               ToolTip="最大化/还原">
                            <TextBlock Text="□" FontSize="14"/>
                        </Button>

                        <!-- Close -->
                        <Button Style="{DynamicResource IconButtonStyle}"
                               Click="CloseButton_Click"
                               ToolTip="关闭">
                            <TextBlock Text="✕" FontSize="14"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- ========== MAIN CONTENT ========== -->
            <Grid Grid.Row="1" Margin="24">
                <Grid.ColumnDefinitions>
                    <!-- Device List -->
                    <ColumnDefinition Width="2*" MinWidth="300"/>
                    <ColumnDefinition Width="16"/>
                    <!-- Action Panel -->
                    <ColumnDefinition Width="1*" MinWidth="250"/>
                </Grid.ColumnDefinitions>

                <!-- ===== LEFT: DEVICE LIST ===== -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                  Text="可用设备"
                                  FontFamily="{DynamicResource UIFont}"
                                  FontSize="20"
                                  FontWeight="SemiBold"
                                  Foreground="{DynamicResource TextPrimaryBrush}"/>

                        <Button Grid.Column="1"
                               Style="{DynamicResource SecondaryButtonStyle}"
                               Command="{Binding RefreshDevicesCommand}"
                               Content="刷新"/>
                    </Grid>

                    <!-- Device List -->
                    <ScrollViewer Grid.Row="1"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Devices}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource DeviceCardStyle}"
                                           Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}"
                                           MouseLeftButtonDown="DeviceCard_Click">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Device Info -->
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding DeviceName}"
                                                          FontFamily="{DynamicResource UIFont}"
                                                          FontSize="16"
                                                          FontWeight="SemiBold"
                                                          Foreground="{DynamicResource TextPrimaryBrush}"
                                                          Margin="0,0,0,4"/>

                                                <TextBlock FontFamily="{DynamicResource MonoFont}"
                                                          FontSize="12"
                                                          Foreground="{DynamicResource TextSecondaryBrush}">
                                                    <Run Text="ID:"/>
                                                    <Run Text="{Binding DeviceId}"/>
                                                </TextBlock>

                                                <TextBlock Text="{Binding SummaryLine}"
                                                          FontFamily="{DynamicResource UIFont}"
                                                          FontSize="12"
                                                          Foreground="{DynamicResource TextSecondaryBrush}"
                                                          Margin="0,8,0,0"
                                                          TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>

                                            <!-- Status Indicator -->
                                            <StackPanel Grid.Column="1"
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Right">
                                                <!-- Status Dot -->
                                                <Ellipse Width="12" Height="12"
                                                        Fill="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                                        HorizontalAlignment="Center"
                                                        Margin="0,0,0,6">
                                                    <Ellipse.Style>
                                                        <Style TargetType="Ellipse">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Connected">
                                                                    <DataTrigger.EnterActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard RepeatBehavior="Forever">
                                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                                               From="1.0" To="0.3"
                                                                                               Duration="0:0:1"
                                                                                               AutoReverse="True"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </DataTrigger.EnterActions>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Ellipse.Style>
                                                </Ellipse>

                                                <TextBlock Text="{Binding StatusMessage}"
                                                          FontFamily="{DynamicResource UIFont}"
                                                          FontSize="12"
                                                          Foreground="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                                          HorizontalAlignment="Center"/>

                                                <StackPanel Orientation="Horizontal"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,10,0,0">
                                                    <Button Style="{DynamicResource SecondaryButtonStyle}"
                                                           Command="{Binding DataContext.ConnectDeviceCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"
                                                           Content="连接"
                                                           FontSize="12"
                                                           Padding="12,4"
                                                           Margin="0,0,8,0"
                                                           Visibility="{Binding Status, Converter={StaticResource DeviceStatusToVisibilityConverter}, ConverterParameter=connect}"/>

                                                    <Button Style="{DynamicResource SecondaryButtonStyle}"
                                                           Command="{Binding DataContext.DisconnectDeviceCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"
                                                           Content="断开"
                                                           FontSize="12"
                                                           Padding="12,4"
                                                           Visibility="{Binding Status, Converter={StaticResource DeviceStatusToVisibilityConverter}, ConverterParameter=disconnect}"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>

                <!-- ===== RIGHT: ACTION PANEL ===== -->
                <Border Grid.Column="2"
                       Style="{DynamicResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Selected Device Info -->
                        <StackPanel Grid.Row="0">
                            <TextBlock Text="操作面板"
                                      FontFamily="{DynamicResource UIFont}"
                                      FontSize="18"
                                      FontWeight="SemiBold"
                                      Foreground="{DynamicResource TextPrimaryBrush}"
                                      Margin="0,0,0,20"/>

                            <!-- Selected Device Display -->
                            <Border Background="{DynamicResource BackgroundBrush}"
                                   BorderBrush="{DynamicResource BorderBrush}"
                                   BorderThickness="1"
                                   CornerRadius="6"
                                   Padding="12"
                                   Margin="0,0,0,20"
                                   Visibility="{Binding SelectedDevice, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="已选择设备"
                                              FontFamily="{DynamicResource UIFont}"
                                              FontSize="12"
                                              Foreground="{DynamicResource TextSecondaryBrush}"
                                              Margin="0,0,0,8"/>

                                    <TextBlock Text="{Binding SelectedDevice.DeviceName}"
                                              FontFamily="{DynamicResource UIFont}"
                                              FontSize="14"
                                              FontWeight="Medium"
                                              Foreground="{DynamicResource TextPrimaryBrush}"/>

                                    <TextBlock Text="{Binding SelectedDevice.SummaryLine}"
                                              FontFamily="{DynamicResource UIFont}"
                                              FontSize="12"
                                              Foreground="{DynamicResource TextSecondaryBrush}"
                                              Margin="0,6,0,0"
                                              TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Middle Spacer -->
                        <Grid Grid.Row="1"/>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Row="2">
                            <Button Style="{DynamicResource PrimaryButtonStyle}"
                                   Command="{Binding ConnectDeviceCommand}"
                                   CommandParameter="{Binding SelectedDevice}"
                                   Content="连接设备"
                                   Margin="0,0,0,12"
                                   HorizontalAlignment="Stretch"/>

                            <Button Style="{DynamicResource SecondaryButtonStyle}"
                                   Command="{Binding DisconnectDeviceCommand}"
                                   CommandParameter="{Binding SelectedDevice}"
                                   Content="断开连接"
                                   HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- ========== STATUS BAR ========== -->
            <Border Grid.Row="2"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,12,12">
                <Grid Margin="16,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Status Text -->
                    <TextBlock Grid.Column="0"
                              Text="{Binding StatusText}"
                              FontFamily="{DynamicResource UIFont}"
                              FontSize="12"
                              Foreground="{DynamicResource TextSecondaryBrush}"
                              VerticalAlignment="Center"/>

                    <!-- Version Info -->
                    <TextBlock Grid.Column="1"
                              Text="{Binding Source={x:Static svc:AppInfo.DisplayVersion}, StringFormat=v{0}}"
                              FontFamily="{DynamicResource MonoFont}"
                              FontSize="11"
                              Foreground="{DynamicResource TextDisabledBrush}"
                              VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
